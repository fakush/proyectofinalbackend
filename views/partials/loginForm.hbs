<hr />
{{#if islogged}}
  <br />
  <div class='alert alert-success alertaLogout' role='alert'>
    <h2>Bienvenido {{this.nombre}}!</h2>
    <h6>Esta es tu conexión Nº {{this.contador}}</h6>
    <form action='/api/auth/local/logout' method='POST' autocomplete='off'>
      <button class='btn btn-warning' id='destroy' name='destroy'>Logout</button>
    </form>
  </div>
{{/if}}
{{#if isDestroyed}}
  <br />
  <div class='alert alert-info alertaLogout' role='alert'>
    <h3>Adios {{this.nombre}}!</h3>
  </div>
{{/if}}
{{#if isTimedOut}}
  <br />
  <div class='alert alert-success alertaLogout' role='alert'>
    <h2>Session TimeOut</h2>
    <form action='/api/auth/local/logout' method='POST' autocomplete='off'>
      <button class='btn btn-warning' id='destroy' name='destroy'>Logout</button>
    </form>
  </div>
{{/if}}
{{#if signUp}}
  <h3>Registro de Usuario</h3>
  <form action='/api/auth/local/signup' method='POST' class='mySignupForm' enctype='multipart/form-data'>
    <div class='form-group'>
      <label for='username'>Username</label>
      <input type='text' class='form-control' id='username' name='username' placeholder='Nombre de Usuario' required />
    </div>
    <div class='form-group'>
      <label for='password'>Password</label>
      <input type='text' class='form-control' id='password' name='password' placeholder='Contraseña' required />
    </div>
    <div class='form-group'>
      <label for='email'>Email</label>
      <input type='text' class='form-control' id='email' name='email' placeholder='E-mail' required />
    </div>
    <div class='form-group'>
      <label for='firtName'>Nombre</label>
      <input type='text' class='form-control' id='firstName' name='firstName' placeholder='Nombre' required />
    </div>
    <div class='form-group'>
      <label for='lastName'>Apellido</label>
      <input type='text' class='form-control' id='lastName' name='lastName' placeholder='Apellido' required />
    </div>
    <div class='form-group'>
      <label for='lastName'>Dirección</label>
      <input type='text' class='form-control' id='address' name='address' placeholder='Dirección' required />
    </div>
    <div class='form-group'>
      <label for='lastName'>Edad</label>
      <input type='number' class='form-control' id='age' name='age' placeholder='Edad' required />
    </div>
    <div class='form-group'>
      <label for='lastName'>Teléfono (XX-XX-XXXX-XXXX)</label>
      <input
        type='tel'
        class='form-control'
        id='phone'
        name='phone'
        placeholder='54-11-1234-5678'
        pattern='[0-9]{2}-[0-9]{2}-[0-9]{4}-[0-9]{4}'
        required
      />
    </div>
    <div class='form-group'>
      <label for='image'>Profile Picture</label>
      <input type='file' id='file' name='file' accept='image/png, image/jpeg' />
    </div>
    <div class='formButton'>
      <button class='btn btn-primary' style='align-content: flex-end;'>Enviar</button>
    </div>
  </form>
{{/if}}
{{#if signUpOK}}
  <br />
  <div class='alert alert-success alertaLogout' role='alert'>
    <h2>Registro exitoso!</h2>
  </div>
{{/if}}
{{#if signUpError}}
  <br />
  <div class='alert alert-danger alertaLogout' role='alert'>
    <h2>Error de registro</h2>
  </div>
{{/if}}
{{#if loginError}}
  <br />
  <div class='alert alert-danger alertaLogout' role='alert'>
    <h2>Error de Login</h2>
  </div>
{{/if}}
{{#if login}}
  <h3>Login de Usuario</h3>
  <form action='/api/auth/local/login' method='POST' autocomplete='off'>
    <div class='form-group myForm'>
      <input type='text' class='form-control' id='username' name='username' placeholder='Nombre' required />
      <input type='password' class='form-control' id='password' name='password' placeholder='Contraseña' required />
    </div>
    <div class='formButton'>
      <button class='btn btn-primary' style='align-content: flex-end;'>Enviar</button>
    </div>
  </form>
  <form action='/api/auth/local/presignup' method='POST' autocomplete='off'>
    <button class='btn btn-success' style='align-content: flex-end;'>Registrarse</button>
  </form>
{{/if}}